			$('#pvc_confirm').removeAttr('readonly')
		}

		$('#pvc_confirm').change(function(event) {
			$('#loadingModal').addClass('is-active')
			$.getJSON('http://192.168.8.105:8888/api/checkpvc/'+$('#pvc_number').val(), function(json, textStatus) {
